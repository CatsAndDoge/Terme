<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pichub.hello.dao.PictureDao">

    <select id="getPicture" resultType="com.pichub.hello.bo.Picture" parameterType="Long">
        select * from picture where pic_id=#{pictureId}
    </select>

<!--获取热门图片-->
    <select id = "getHotPicture" resultType = "com.pichub.hello.bo.Picture" >
        select * from picture where pic_id IN (select pic_id from belike group by pic_id having COUNT(*)>1 ORDER BY COUNT(*) DESC) order by instr(pic_id,pic_path);
    </select>

</mapper>