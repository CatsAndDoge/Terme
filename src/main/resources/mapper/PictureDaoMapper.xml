<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pichub.hello.dao.PictureDao">

    <select id="getPicture" resultType="com.pichub.hello.bo.Picture" parameterType="Long">
        select * from picture where pic_id=#{pictureId}
    </select>

    <insert id="insertPicture" parameterType="com.pichub.hello.bo.Picture" useGeneratedKeys="true" keyProperty="pictureId" keyColumn="pic_id">
        insert into picture (pic_name,upload_time,del_state,pic_story,user_id,pic_path,pic_thumbnail_path,pic_size)
        values (#{picture.pictureName},#{picture.uploadTime})
    </insert>

</mapper>